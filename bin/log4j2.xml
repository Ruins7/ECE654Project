<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">
  <Appenders>
    <File name="logfile" fileName="logs/errorlog.log" append="true">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="logfile"/>
    </Root>
  </Loggers>
</Configuration>